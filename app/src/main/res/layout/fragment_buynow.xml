<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.buynow">

    <TextView
        android:id="@+id/titless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:text="Complete Your Purchase"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.0" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.034">


        <View
            android:id="@+id/v1"
            android:layout_width="80dp"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="#9A9A9A" />


        <View
            android:id="@+id/v3"
            android:layout_width="80dp"
            android:layout_height="1dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"
            android:background="#9A9A9A" />

        <View
            android:id="@+id/v2"
            android:layout_width="77dp"
            android:layout_height="1dp"
            android:layout_marginStart="153dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="#9A9A9A" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="269dp"
            android:layout_height="37dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="75dp"
            android:layout_marginBottom="14dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/bagtab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleX="0.6"
                android:scaleY="0.6"
                android:text="Bag"
                android:textColor="#9A9A9A"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/paymenttab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleX="0.6"
                android:scaleY="0.6"
                android:text="Payment"
                android:textColor="#9A9A9A"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RadioGroup>


    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView7"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#FFFFFF"
        android:outlineAmbientShadowColor="@android:color/transparent"
        android:outlineSpotShadowColor="@android:color/transparent"
        android:padding="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.166"
        tools:layout_editor_absoluteX="30dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:outlineAmbientShadowColor="@android:color/transparent"
            android:outlineSpotShadowColor="@android:color/transparent"
            app:cardCornerRadius="14dp"
            tools:layout_editor_absoluteX="3dp"
            tools:layout_editor_absoluteY="3dp">

            <ImageView
                android:id="@+id/postadImage"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/logo" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/title"
            android:layout_width="231dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="147dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/chivoregularvtt"
            android:text="Product Name"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="170dp"
            android:layout_marginTop="98.5dp"
            android:fontFamily="@font/chivoregularvtt"
            android:text="Price"
            android:textColor="#4CAF50"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="145dp"
            android:layout_marginTop="105dp"
            android:fontFamily="@font/chivoregularvtt"
            android:paddingStart="3dp"
            android:text="Rs:"
            android:textColor="#9A9A9A"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="323dp"
            android:layout_marginTop="105dp"
            android:fontFamily="@font/chivoregularvtt"
            android:text="Quantity:"
            android:textAlignment="textEnd"
            android:textColor="#9A9A9A"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/sellerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="147dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/chivoregularvtt"
            android:text="Sold By:"
            android:textAlignment="textEnd"
            android:textColor="#9A9A9A"
            android:textSize="11sp" />

        <TextView
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="300dp"
            android:layout_marginTop="103dp"
            android:fontFamily="@font/chivoregularvtt"
            android:paddingStart="3dp"
            android:text="1"
            android:textAlignment="textEnd"
            android:textSize="14sp" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#FFFFFF"
        android:outlineAmbientShadowColor="@android:color/transparent"
        android:outlineSpotShadowColor="@android:color/transparent"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ll2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.381"
        tools:layout_editor_absoluteX="-16dp">


        <TextView
            android:layout_width="231dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="6dp"
            android:text="Shipping Address"
            android:textSize="@dimen/_11ssp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/chivoregularvtt"
            android:text="Address"
            android:textAlignment="textEnd"
            android:textColor="#9A9A9A"
            android:textSize="12sp" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/donate"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#FFFFFF"
        android:outlineAmbientShadowColor="@android:color/transparent"
        android:outlineSpotShadowColor="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.797"
        tools:layout_editor_absoluteX="0dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/donatefrag"
            android:layout_width="400dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginStart="-30dp"
            android:backgroundTint="#B7FEDFBF"
            android:outlineAmbientShadowColor="@android:color/transparent"
            android:outlineSpotShadowColor="@android:color/transparent"
            app:cardCornerRadius="15dp"
            android:visibility="invisible">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="300dp"
                android:src="@drawable/santa" />

            <TextView
                android:layout_width="231dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="34dp"
                android:layout_marginTop="8dp"
                android:text="Be a santa to someone"
                android:textColor="#F5FF5252"
                android:textSize="@dimen/_11ssp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="34dp"
                android:layout_marginTop="33dp"
                android:fontFamily="@font/chivoregularvtt"
                android:text="Embrace the spirit of giving by being a Santa to someone! Your contribution can light up someone's day and bring hope where it's needed most."
                android:textAlignment="textStart"
                android:textColor="#9A9A9A"
                android:textSize="10sp" />


        </androidx.cardview.widget.CardView>


    </androidx.cardview.widget.CardView>







<!--    payment-->

    <androidx.cardview.widget.CardView
        android:id="@+id/payment"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#FFFFFF"
        android:outlineAmbientShadowColor="@android:color/transparent"
        android:outlineSpotShadowColor="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.151"
        tools:layout_editor_absoluteX="-16dp"
        android:visibility="gone">


        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="171dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.034">


            <View
                android:id="@+id/v4"
                android:layout_width="300dp"
                android:layout_height="0.3dp"
                android:layout_marginStart="55dp"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="30dp"
                android:background="#D79A9A9A" />



            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="410dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="14dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/cod"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:drawableEnd="@drawable/cash"
                    android:text="Cash on Delivery (Cash/UPI)"
                    android:textColor="#F3292929"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/razerpay"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:text="Online"
                    android:drawableEnd="@drawable/online"
                    android:textColor="#F3292929"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RadioGroup>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cashond"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#FFFFFF"
        android:outlineAmbientShadowColor="@android:color/transparent"
        android:outlineSpotShadowColor="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        tools:layout_editor_absoluteX="0dp"
        android:visibility="gone">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="69dp"
            android:layout_marginTop="8dp"
            android:text="To Confirm your order Re-enter the code"
            android:textColor="#F5FF5252"
            android:textSize="@dimen/_11ssp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/codegen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="94dp"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/chivoregularvtt"
            android:text="0000"
            android:textAlignment="textStart"
            android:inputType="numberDecimal"
            android:background="@android:color/transparent"
            android:textColor="#9A9A9A"
            android:textSize="35sp" />


        <EditText
            android:id="@+id/coderead"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:ems="4"
            android:hint="Enter code"
            android:layout_marginStart="194dp"
            android:layout_marginTop="45dp"
            android:textSize="14sp"
            android:textAlignment="center"/>

    </androidx.cardview.widget.CardView>

<!--payment-->




    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#FFFFFF"
            android:gravity="center"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Total payable amount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/totalsum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="amount"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/placeorder"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="#FF5A5F"
            android:text="Place Order"
            app:cornerRadius="0dp" />


    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>