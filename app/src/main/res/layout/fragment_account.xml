<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragments.account_frag">


    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_2sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileimg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/avatar"
            android:layout_marginTop="@dimen/_6sdp"
            app:civ_border_color="#3C222020"
            app:civ_border_width="0.5dp" />

        <ImageView
            android:id="@+id/addprofileimg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="@dimen/_minus20sdp"
            android:layout_marginTop="@dimen/_63sdp"
            android:src="@drawable/add" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp"
            android:paddingLeft="15dp">

            <TextView
                android:id="@+id/namebold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_25sdp"
                android:fontFamily="@font/dosisbold"
                android:text="Loading.."
                android:textColor="#FF5A5F"
                android:textSize="@dimen/_19ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/empro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fetching"
                android:textColor="#838383"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.429"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.107" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/full"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.571"
        tools:layout_editor_absoluteX="0dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:text="My Account"
            android:textColor="#DF151515"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Name:"
            android:textColor="#DF151515"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/edfullName"
                android:layout_width="@dimen/_270sdp"
                android:layout_height="@dimen/_37sdp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="3dp"
                android:backgroundTint="@color/edpro"
                app:cornerRadius="@dimen/_9sdp"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-340dp"
                android:layout_marginTop="3dp"
                android:text="fetching details..."
                android:textColor="#838383"
                android:textSize="@dimen/_12ssp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Email:"
            android:textColor="#DF151515"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/emailadd"
                android:layout_width="@dimen/_270sdp"
                android:layout_height="@dimen/_37sdp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="3dp"
                android:backgroundTint="@color/edpro"
                app:cornerRadius="@dimen/_9sdp"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-340dp"
                android:layout_marginTop="3dp"
                android:text="fetching details..."
                android:textColor="#838383"
                android:textSize="@dimen/_12ssp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Phone Number:"
            android:textColor="#DF151515"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/phoneno"
                android:layout_width="@dimen/_270sdp"
                android:layout_height="@dimen/_37sdp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="3dp"
                android:backgroundTint="@color/edpro"
                app:cornerRadius="@dimen/_9sdp"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/pho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-340dp"
                android:layout_marginTop="3dp"
                android:text="fetching details..."
                android:textColor="#838383"
                android:textSize="@dimen/_12ssp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Address:"
            android:textColor="#DF151515"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/addr"
                android:layout_width="@dimen/_270sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="3dp"
                android:backgroundTint="@color/edpro"
                app:cornerRadius="@dimen/_9sdp"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-340dp"
                android:layout_marginTop="-28dp"
                android:text="fetching details..."
                android:textColor="#838383"
                android:textSize="@dimen/_12ssp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UniWares version 1.0"
        android:textColor="@color/grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.985" />

    <Button
        android:id="@+id/editbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="3dp"
        android:backgroundTint="@color/edpro"
        android:drawableEnd="@drawable/edbtn"
        android:text="Edit Details"
        android:textColor="@color/grey"
        android:textSize="@dimen/_12ssp"
        app:cornerRadius="@dimen/_9sdp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.445"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/full"
        app:layout_constraintVertical_bias="0.509"/>


</androidx.constraintlayout.widget.ConstraintLayout>